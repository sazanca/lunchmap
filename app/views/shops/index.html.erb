<p id="notice"><%= notice %></p>

<h1>お店一覧</h1>

<%= form_tag('/shops', method: 'get') do %>
<%= label_tag(:name_key, 'Search name:') %>
<%= text_field_tag(:name_key) %>
<%= submit_tag('Search') %> <%= link_to '検索終了', root_path %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.category.name %></td>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= link_to '詳細', shop %></td>
        <td><%= link_to '編集', edit_shop_path(shop) %></td>
        <td><%= link_to '削除', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_shop_path %> <%= link_to 'お店一覧へ', categories_path %>
