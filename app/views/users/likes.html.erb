<div class="like_main">
  <%= render "mypage_side" %>
  <section class="main__group">
    <h2 class="main__group__title">
      〇〇さんの一覧投稿
    </h2>  
  </section>
  <section class="main__table">
    <h2 class="main__table__header">
      いいね！一覧
    </h2>
    <div class="main__table__list">
      <% current_user.like_shops.each do |shop| %>
        <div class='productBox-Lists'>
          <div class='productList'>
            <%= link_to shop_path(shop) do %>
              <figure class='productList--img'>
                <img src="https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png" />
              </figure>
              <div class='productList--body'>
                <h3 class='name'><%= shop.name %></h3>
                <div class='details'>
                  <ul>
                    <li><%= shop.price%>円</li>
                    <li><%= "♯#{shop.tag_list}" %></li>
                    <li><i class="fa fa-star likeIcon"></i></li>☆                  
                  </ul> 
                </div>
              </div>
            <% end %>
          </div>
        <div>
      <% end %>
    </div>
  </section>  
</div>