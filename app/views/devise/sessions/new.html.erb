<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname,placeholder:"例:ラーメン太郎", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <p><i>7〜１２文字</i></p>
    <%= f.password_field :password, placeholder:"7〜１２文字",autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
