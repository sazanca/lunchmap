<div class="header">
  <h1 class="header-title">ランチマップ</h1>
  <div class="header-search">
    <%= form_tag('/shops', method: 'get') do %>
    <%= label_tag(:name_key, '店名:') %>
    <%= text_field_tag(:name_key) %>
    <%= submit_tag('Search') %> <%= link_to '検索終了', shops_path %>
    <% end %>
  </div>
  <div class="header-list">
    <div class="header-list-box">
      ログイン
    </div>
  </div>  
</div>
<div class="main"> 
  <div class="main-contens">
    <section calss="main-contens-copy">
      <p class="main-copy">今日はどこ行く？</p>
      <p class="main-text">誘える人かな？</p>
    </section>  
    <p><%= link_to 'お店一覧', shops_path %><p>
    <p id="notice"><%= notice %></p>
    <br>
  </div>
  <div class="main-contents-lists">
    <div class="main-contents-lists-raw">
      <div class="main-content-lists-new">
        <h3 class="subject">新規投稿一覧</h3>
          <% @shops.each do |shop| %>
            <tr>
              <td><%= shop.name %></td>
              <td><%= shop.address %></td>
            </tr>
          <% end %>  
      </div>
    </div>
    <div class="main-contents-lists-raw">
      <div class="main-contents-list-price">
        <h3 class="subject">値段</h3>
      </div>
    </div>  
    <div class="main-contents-lists-raw">
      <div class="main-contents-list-time">
        <h3 class="subject">店までの距離</h3>
      </div> 
    </div>
  </div>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= link_to '詳細', shop %></td>
        <td><%= link_to '編集', edit_shop_path(shop) %></td>
        <td><%= link_to '削除', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <br>
  <%= link_to '新規投稿', new_shop_path %> <%= link_to 'お店一覧へ', categories_path %>
</div>  
<footer>
  <div class="footer-log">
    <small>©︎ 2020 ASSE</small>
  </div>
</footer>
